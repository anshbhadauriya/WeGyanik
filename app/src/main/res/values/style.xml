<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileOptionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="ProfileOptionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="BlurDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.MyApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.SmallRoundedCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Roboto regular default for all text -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="CustomActiveIndicator">
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:height">30dp</item>
        <item name="android:width">40dp</item>
        <item name="android:radius">12dp</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="BottomNav.ActiveIndicator.None" parent="">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

</resources>