<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <!-- Top bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background"
            app:logo="@drawable/wegyaniklogo"
            app:logoDescription="@string/app_name"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Wegyanik"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable content (banner, heading, grid, buttons) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Auto-scrolling Banner -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:strokeColor="@android:color/transparent">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="16"
                    app:iss_delay="3000"
                    app:iss_period="2500" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Title text -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/gradientTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where Innovation meets Creation"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textStyle="italic|bold"
                android:layout_marginTop="24dp"
                tools:ignore="HardcodedText" />

            <!-- 2-column card grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

                <!-- Card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/internshipsCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Internships card"
                    android:focusable="true"
                    app:cardBackgroundColor="#FFF8DB"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#F7BD3A"
                    app:strokeWidth="1dp"
                    tools:ignore="HardcodedText" >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end|bottom"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_internship_home" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Internships"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="#F7BD3A"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learning"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experience"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opportunities"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/workshopsCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Workshops card"
                    android:focusable="true"
                    app:cardBackgroundColor="#E2FBE6"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#2BC46D"
                    app:strokeWidth="1dp"
                    tools:ignore="HardcodedText" >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="80dp"
                        android:layout_height="75dp"
                        android:layout_gravity="bottom|end"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_workshop_home" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Workshops"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="#2BC46D"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Practice"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Innovation"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Collaboration"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/projectsCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Projects card"
                    android:focusable="true"
                    app:cardBackgroundColor="#EBF3FF"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#3C8DFF"
                    app:strokeWidth="1dp"
                    tools:ignore="HardcodedText" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Background Image: covers the card -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="75dp"
                            android:layout_gravity="end|bottom"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_project_home" />

                        <!-- Overlay all text content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Projects"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="#3C8DFF"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Result"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/text_secondary"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Planning"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/text_secondary"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Execution"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/text_secondary"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/consultancyCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Opportunities card"
                    android:focusable="true"
                    app:cardBackgroundColor="#FFE4F4"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#EA4992"
                    app:strokeWidth="1dp"
                    tools:ignore="HardcodedText" >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="80dp"
                        android:layout_height="75dp"
                        android:layout_gravity="end|bottom"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_workshop_home" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Consultancy"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="#EA4992"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hope"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Growth"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advancements"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 5 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/competitionsCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Jobs card"
                    android:focusable="true"
                    app:cardBackgroundColor="#F1E8FF"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#A87EFF"
                    app:strokeWidth="1dp"
                    tools:ignore="HardcodedText" >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginStart="50dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_internship_home" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Competition"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="#A87EFF"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Career"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employment"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 6 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/donateCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Wegyanik card"
                    android:focusable="true"
                    app:cardBackgroundColor="#D7FBFF"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#37D6F2"
                    app:strokeWidth="1dp"
                    tools:ignore="HardcodedText" >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="80dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_workshop_home"
                        android:layout_marginStart="50dp"
                        android:layout_gravity="bottom|end"
                        android:contentDescription="@null"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Donate"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="#37D6F2"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aim"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discovery"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </GridLayout>

            <Button
                android:id="@+id/wegyanik_for_students"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ffda03"
                android:text="Wegyanik for Students"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/wegyanik_for_academia_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:backgroundTint="#ffb343"
                android:text="Wegyanik for Academia/Industry"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
