<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background"
            app:logo="@drawable/wegyaniklogo"
            app:logoDescription="@string/app_name"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Wegyanik"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable content with banner and 2-column card grid -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="16dp"
        android:layout_marginBottom="72dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- Auto-scrolling Banner -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="18dp"
            android:layout_marginBottom="16dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/transparent">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_delay="3000"
                app:iss_corner_radius="16"
                app:iss_period="2500"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Title text -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‹ Time to #BeWegyanik"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="@color/text_primary"
            android:textStyle="italic|bold"
            android:textSize="14sp"/>

        <!-- 2-column card grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#B8F2C2"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Products card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore Dream Careers"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FFC09F"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Mentorships card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projects"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build Skills Daily"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#A0CED9"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Products card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internships"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gain Practical Experience"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Upcoming)"
                        android:textStyle="italic"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="#EAD9FF"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Projects card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Competitions"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guidance from Top Mentors"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Upcoming)"
                        android:textStyle="italic"
                        android:textColor="@color/text_primary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>