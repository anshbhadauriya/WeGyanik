<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Banner Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/bannerViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- Left Arrow for Manual Scroll -->
                <ImageButton
                    android:id="@+id/arrowLeft"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|start"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous"
                    android:src="@drawable/ic_arrow_left"
                    android:tint="?attr/colorOnPrimary"/>

                <!-- Right Arrow for Manual Scroll -->
                <ImageButton
                    android:id="@+id/arrowRight"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|end"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="?attr/colorOnPrimary"/>
            </FrameLayout>

            <!-- Products Section -->
            <TextView
                android:id="@+id/sectionProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:paddingBottom="8dp"
                android:layout_marginTop="24dp"/>

            <HorizontalScrollView
                android:id="@+id/productsScrollView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/productsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">
                    <!-- Product cards here -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Projects Section -->
            <TextView
                android:id="@+id/sectionProjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Projects"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:paddingBottom="8dp"
                android:layout_marginTop="24dp"/>

            <HorizontalScrollView
                android:id="@+id/projectsScrollView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/projectsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">
                    <!-- Project cards here -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Advertisements Section -->
            <TextView
                android:id="@+id/sectionAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advertisements"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:paddingBottom="8dp"
                android:layout_marginTop="24dp"/>

            <HorizontalScrollView
                android:id="@+id/adsScrollView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/adsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">
                    <!-- Advertisement cards here -->
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
