<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background"
            app:logo="@drawable/wegyaniklogo"
            app:logoDescription="@string/app_name"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Wegyanik"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable content (banner, heading, grid, buttons) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Auto-scrolling Banner -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="18dp"
                app:strokeColor="@android:color/transparent">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="16"
                    app:iss_delay="3000"
                    app:iss_period="2500" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Title text -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹ Time to #BeWegyanik"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <!-- 2-column card grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

                <!-- Card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productsCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Products card"
                    android:focusable="true"
                    app:cardBackgroundColor="#B8F2C2"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Products"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore Dream Careers"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/projectsCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Projects card"
                    android:focusable="true"
                    app:cardBackgroundColor="#FFC09F"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Projects"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Build Skills Daily"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/internshipsCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Internships card"
                    android:focusable="true"
                    app:cardBackgroundColor="#A0CED9"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Internships"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gain Practical Experience"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Upcoming)"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            android:textStyle="italic" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/competitionsCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contentDescription="Competitions card"
                    android:focusable="true"
                    app:cardBackgroundColor="#EAD9FF"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Competitions"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guidance from Top Mentors"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Upcoming)"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/text_secondary"
                            android:textStyle="italic" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </GridLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:backgroundTint="#ffda03"
                android:text="Wegyanik for Students\n(Upcoming)"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffb343"
                android:text="Wegyanik for Academia/Industry\n(Upcoming)"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
