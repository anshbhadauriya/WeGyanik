<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tutorialTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Arduino IDE Installation for Windows"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Step 1 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/step1Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tutorialTitle"
        app:cardBackgroundColor="@color/background"
        app:strokeColor="@color/divider">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Step 1: Gather Materials and Tools"
            android:textColor="@color/text_primary"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Step 2 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/step2Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step1Card"
        app:cardBackgroundColor="@color/background"
        app:strokeColor="@color/divider">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Step 2: Arduino IDE Installation for Windows"
            android:textColor="@color/text_primary"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Step 3 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/step3Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step2Card"
        app:cardBackgroundColor="@color/background"
        app:strokeColor="@color/divider">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/text_primary"
            android:text="Step 3: View the Output"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- WebView -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step3Card"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>
