<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/background">

        <!-- Project Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="IoT Basic Kit Tutorial"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Step 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step1Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/divider">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/background"
                android:textColor="@color/text_primary"
                android:text="Step 1: Gather Materials and Tools"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step2Card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/step1Card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/divider">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Step 2: What is IoT?"
                android:background="@color/background"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <!-- WebView: First -->
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="55dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 3 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step3Card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/step2Card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/divider">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Step 3: Basics of Breadboard"
                android:background="@color/background"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- WebView: Second -->
            <WebView
                android:id="@+id/videoWebView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="55dp"
                android:background="#000000"/>
        </com.google.android.material.card.MaterialCardView>


        <!-- Step 4 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step4Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/step3Card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/divider">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Step 4: Installation of Arduino IDE"
                android:background="@color/background"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 5 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step5Card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/step4Card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/divider">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Step 5: ESP32 Board Setup"
                android:background="@color/background"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- WebView: Third -->
            <WebView
                android:id="@+id/esp32WebView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="55dp"
                android:background="#E0E0E0" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 6 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/step6Card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/step5Card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/divider">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Step 6: ESP32 Driver and Blink LED"
                android:background="@color/background"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <!-- WebView: Fourth -->
            <WebView
                android:id="@+id/esp32BlinkWebView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="55dp"
                android:background="#000000"/>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
