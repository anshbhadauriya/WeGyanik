<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeScreen">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers provided"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            tools:ignore="HardcodedText"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp">

            <!-- Incubation Support -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/incubationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/incubationLogoContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/icon_green"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/incubationLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/incubationLogoContainer"
                        app:layout_constraintBottom_toBottomOf="@id/incubationLogoContainer"
                        app:layout_constraintStart_toStartOf="@id/incubationLogoContainer"
                        app:layout_constraintEnd_toEndOf="@id/incubationLogoContainer"
                        app:srcCompat="@drawable/ic_building" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/incubationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Incubation Support"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/incubationLogoContainer"
                        app:layout_constraintStart_toEndOf="@id/incubationLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/incubationText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Incubation support offers startups mentorship, resources, and funding access to grow and scale effectively."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/incubationTitle"
                        app:layout_constraintStart_toEndOf="@id/incubationLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="HardcodedText" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Patent Facilities -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/patentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/patentLogoContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/icon_blue"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/patentLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/patentLogoContainer"
                        app:layout_constraintBottom_toBottomOf="@id/patentLogoContainer"
                        app:layout_constraintStart_toStartOf="@id/patentLogoContainer"
                        app:layout_constraintEnd_toEndOf="@id/patentLogoContainer"
                        app:srcCompat="@drawable/ic_tick" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/patentTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Patent Facilities"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/patentLogoContainer"
                        app:layout_constraintStart_toEndOf="@id/patentLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/patentText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Patent facilities help startups protect their innovations through legal guidance, filing support, and IP strategy assistance."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/patentTitle"
                        app:layout_constraintStart_toEndOf="@id/patentLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Prototyping -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/prototypingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/prototypingLogoContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/icon_orange"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/prototypingLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/prototypingLogoContainer"
                        app:layout_constraintBottom_toBottomOf="@id/prototypingLogoContainer"
                        app:layout_constraintStart_toStartOf="@id/prototypingLogoContainer"
                        app:layout_constraintEnd_toEndOf="@id/prototypingLogoContainer"
                        app:srcCompat="@drawable/ic_settings" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/prototypingTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prototyping"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/prototypingLogoContainer"
                        app:layout_constraintStart_toEndOf="@id/prototypingLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/prototypingText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prototyping support helps startups build and test early versions of their products with access to tools, labs, and technical expertise."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/prototypingTitle"
                        app:layout_constraintStart_toEndOf="@id/prototypingLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Launch Facilities -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/launchFacilitiesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/launchFacilitiesLogoContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/icon_purple"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/launchFacilitiesLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/launchFacilitiesLogoContainer"
                        app:layout_constraintBottom_toBottomOf="@id/launchFacilitiesLogoContainer"
                        app:layout_constraintStart_toStartOf="@id/launchFacilitiesLogoContainer"
                        app:layout_constraintEnd_toEndOf="@id/launchFacilitiesLogoContainer"
                        app:srcCompat="@drawable/ic_rocket" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/launchFacilitiesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Launch Facilities"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/launchFacilitiesLogoContainer"
                        app:layout_constraintStart_toEndOf="@id/launchFacilitiesLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/launchFacilitiesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prototyping support helps startups build and test early versions of their products with access to tools, labs, and technical expertise."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/launchFacilitiesTitle"
                        app:layout_constraintStart_toEndOf="@id/launchFacilitiesLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Internship Opportunity -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/internshipCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/internshipLogoContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/icon_pink"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/internshipLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/internshipLogoContainer"
                        app:layout_constraintBottom_toBottomOf="@id/internshipLogoContainer"
                        app:layout_constraintStart_toStartOf="@id/internshipLogoContainer"
                        app:layout_constraintEnd_toEndOf="@id/internshipLogoContainer"
                        app:srcCompat="@drawable/ic_internship" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/internshipTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Internship Opportunity"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/internshipLogoContainer"
                        app:layout_constraintStart_toEndOf="@id/internshipLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/internshipText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prototyping support helps startups build and test early versions of their products with access to tools, labs, and technical expertise."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/internshipTitle"
                        app:layout_constraintStart_toEndOf="@id/internshipLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mentorship -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mentorshipCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mentorshipLogoContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/icon_teal"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/mentorshipLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/mentorshipLogoContainer"
                        app:layout_constraintBottom_toBottomOf="@id/mentorshipLogoContainer"
                        app:layout_constraintStart_toStartOf="@id/mentorshipLogoContainer"
                        app:layout_constraintEnd_toEndOf="@id/mentorshipLogoContainer"
                        app:srcCompat="@drawable/ic_mentorship" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mentorshipTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mentorship"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/mentorshipLogoContainer"
                        app:layout_constraintStart_toEndOf="@id/mentorshipLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mentorshipText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prototyping support helps startups build and test early versions of their products with access to tools, labs, and technical expertise."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/mentorshipTitle"
                        app:layout_constraintStart_toEndOf="@id/mentorshipLogoContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
